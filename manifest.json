{
    "name": "Bookmarks Manager",
    "version": "1.0.1",
    "author": "wsshow",
    "description": "高效的浏览器书签管理插件",
    "manifest_version": 3,
    "background": {
        "service_worker": "bg-wrapper.js"
    },
    "icons": {
        "128": "./img/logo.png"
    },
    "permissions": [
        "bookmarks"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Bookmarks Manager"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ]
}